                    <tr>
                        <th>Name Of The Student</th>
                        <th>Student Code</th>
                        <th>Gender</th>
                        <th>Course</th>
                        <th>Class</th>
                        <th>Email</th>
                        <th>Contact Number</th>
                        <th>Action</th>
                        <th>Status</th>

                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="data in Students">
                        <td>
                           {{data.name}}
                        </td>
                        <td>
                            {{data.code}}
                        </td>
                        <td>
                            {{data.gender}}
                        </td>
                        <td>
                            {{data.course_name}}
                        </td>
                        <td>
                            {{data.class_name}}
                        </td>
                      <td></td>
                        <td></td>
                        <td><input type="button" class="btn btn-primary" value="Edit" /></td>
                        <td>
                        <span class="m-switch m-switch--icon m-switch--danger">
                        <label>
                         <input type="checkbox" checked="checked" name="">
                       <span></span>
                        </label>
                            </span></td>
                    </tr>
                   
                </tbody>
            </table>
        </form>
    </div>


    <script src="@Url.Content("~/Content/angularjs/scripts/angular.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ProjectScript/Student/StudentModule.js")"></script>
    <script src="@Url.Content("~/Scripts/Common/Service.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ProjectScript/Student/StudentController.js")" type="text/javascript"></script>

    
    <script>
        var baseURL = "@ConfigurationManager.AppSettings["BaseUrlPath"].ToString()";
    </script>
</body>
</html>
