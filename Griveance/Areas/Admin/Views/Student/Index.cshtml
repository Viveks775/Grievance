
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminDashboardLayout.cshtml";
}

<h2>Students</h2>
<html lang="en" class="no-js">

<body ng-app="GR">
    @using System.Configuration;
  
   

    <div ng-controller="UsersController">
        <form class="student-admission-wrapper" ng-init="Initialize()">

            <div ng-show="IsVisible">


                <div class="row">
                    <div class="col-md-12 ">
                        <div class="portlet box blue">

                            <div class="portlet-body display-hide">

                                <div class="form-body">
                                    <div class="form-group">
                                        <label class="control-label col-md-4">
                                           Name Of The Student
                                            <span class="required"> * </span>
                                        </label>
                                        <div class="input-group">
                                            <input type="text" value={{StudentName}} ng-model="StudentName"  name="FromId" class="form-control" required />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-4">
                                          Code
                                        </label>
                                        <div class="input-group">
                                            <input type="text"  value={{StudentCode}} ng-model="StudentCode"  name="Host" class="form-control" required />

                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-4">
                                      Type
                                        </label>
                                        <div class="input-group">
                                            <input type="text" value={{Type}} name="Port" ng-model="Type" class="form-control" required />

                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-4">
                                            Gender
                                        </label>
                                        <div class="input-group">
                                            <input type="text" value={{Gender}}  name="Port" ng-model="Gender" class="form-control" required />

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-4">
                                            Email
                                        </label>
                                        <div class="input-group">
                                            <input type="text" value={{email}} name="Port" ng-model="email" class="form-control" required />

                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-4">
                                            Contact
                                        </label>
                                        <div class="input-group">
                                            <input type="text"  value={{Contact}} ng-model="Contact"  name="Port" class="form-control" required />

                                        </div>
                                    </div>


                                    
                                </div>
                                <div class="form-actions">
                                    <div class="row">
                                        <div class="col-md-offset-4 col-md-9">
                                            <button class="btn blue" ng-click="AddUpdate(StudentName,StudentCode,Type,Gender,email,Contact)">
                                                <i class="fa fa-database"> </i>  Save
                                            </button>
                                            <button class="btn default hide-portlet" ng-click="Clear()">
                                                <i class="fa fa-times"> </i> Cancel
                                            </button>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <input type="button" class="btn btn-accent" value="NEW" ng-click="ShowHide()" />


            <table class="table table-striped- table-bordered table-hover table-checkable" id="m_table_1">
                <thead>
                    <tr>
                        <th>Name Of The Student</th>
                        <th>Student Code</th>
                        <th>Gender</th>
                        <th>Course</th>
                        <th>Class</th>
                        <th>Email</th>
                        <th>Contact Number</th>
                        <th>Action</th>
                        <th>Status</th>

                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="data in Students">
                        <td>
                           {{data.name}}
                        </td>
                        <td>
                            {{data.code}}
                        </td>
                        <td>
                            {{data.gender}}
                        </td>
                        <td>
                            {{data.course_name}}
                        </td>
                        <td>
                            {{data.class_name}}
                        </td>
                      <td></td>
                        <td></td>
                        <td><input type="button" class="btn btn-primary" value="Edit" ng-click="ShowHide(data.code)"  /></td>
                    </tr>
                   
                </tbody>
            </table>
        </form>
    </div>


    <script src="@Url.Content("~/Content/angularjs/scripts/angular.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ProjectScript/Student/StudentInfoModule.js")"></script>
    <script src="@Url.Content("~/Scripts/Common/Service.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ProjectScript/Student/StudentInfoController.js")" type="text/javascript"></script>



 
  
    <script>
        var baseURL = "@ConfigurationManager.AppSettings["BaseUrlPath"].ToString()";
    </script>
</body>
</html>
