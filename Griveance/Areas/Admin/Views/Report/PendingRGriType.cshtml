
@{
    Layout = "~/Areas/Admin/Views/Shared/ReportLayout.cshtml";
}
@model IEnumerable<Griveance.Models.View_ReportViewGrievanceList>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PendingRGriType</title>
</head>
<body>
    <div>
      
        <h2 align="center">Grievance Redressal Portal</h2>
        <hr />
        <h4 align="center">Pending Report Grievance Type Report</h4>
        <hr />
        <div class="col-xl-auto">

            <!--begin::Portlet-->
            <div class="m-portlet m-portlet--last m-portlet--head-lg m-portlet--responsive-mobile" id="main_portlet">


                <div class="m-portlet m-portlet--mobile">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <b>From Date-</b>&nbsp; @ViewData["Fromdate"] &nbsp;&nbsp;
                                <b>To Date-</b>&nbsp; @ViewData["Todate"]
                            </div>
                        </div>

                    </div>

                </div>
                <table align="center" class="table table-striped- table-bordered table-hover table-checkable" border="1">
                    <tr  align="center">
                        <th>Sr.No</th>
                        <th>Comp.Id</th>
                        <th>Complainants Type</th>
                        <th>Grievance Type</th>
                        <th>Complainants Name</th>
                        <th>Date</th>
                        <th>Subject</th>
                    </tr>
                    @foreach (var s in Model)
                    {
                        <tr align="center">
                            <td></td>
                            <td>@Html.DisplayFor(m => s.CompID)</td>
                            <td>@Html.DisplayFor(m => s.StackHolderType)</td>
                            <td>@Html.DisplayFor(m => s.name)</td>
                            <td>@Html.DisplayFor(m => s.GrievanceType)</td>
                            <td>@Html.DisplayFor(m => s.Date)</td>
                            <td>@Html.DisplayFor(m => s.Subject)</td>
                        </tr>
                    }
                </table>
            </div>
            </div>
        </div>
</body>
</html>
